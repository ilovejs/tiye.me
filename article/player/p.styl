
#box
	margin 100px 200px
	border 0px solid black
	padding 0px
	width 800px
	display -moz-box
	display -webkit-box
	-moz-box-orient vertical
	-webkit-box-orient vertical
#screen
	margin 0px
	height 450px
	width 100%
	background-image url('lights.jpg')
	background-size 800px
	background-position bottom
	-moz-box-shadow 0px 0px 10px black
	-webkit-box-shadow 0px 0px 10px black
#state
	height 2px
	width 100%
	background -moz-linear-gradient(left,black,#0F001F)
	-moz-box-shadow 0px 0px 10px black
	background -webkit-linear-gradient(left,black,#0F001F)
	-webkit-box-shadow 0px 0px 10px black
#buffer
	height 2px
	width 60%
	background -moz-linear-gradient(left,black,#EE4422)
	-moz-animation buffer 100s infinite linear
	background -webkit-linear-gradient(left,black,#EE4422)
	-webkit-animation buffer 100s infinite linear
#play
	height 2px
	width 44%
	background -moz-linear-gradient(left,#0F001F,#B0BF3E)
	-moz-animation play 100s infinite linear
	background -webkit-linear-gradient(left,#0F001F,#B0BF3E)
	-webkit-animation play 100s infinite linear
#show
	width 100%
	height 400px
#tools
	height 50px
	width 100%
	box-shadow 0px 0px 4px yellow
	background -moz-linear-gradient(top,rgba(4,0,0,0.4),#0F001F)
	background -webkit-linear-gradient(top,rgba(4,0,0,0.4),#0F001F)
	opacity 0
	-moz-transition-duration 0.4s
	display -moz-box
	-moz-box-orient horizontal
	-webkit-transition-duration 0.4s
	display -webkit-box
	-webkit-box-orient horizontal
#tools:hover
	opacity 1
#stop
	color #B0BF3E

@-moz-keyframes buffer
	0%
		width 0px
	60%
		width 800px
	100%
		width 800px
@-moz-keyframes play
	0%
		width 0px
	100%
		width 800px
@-webkit-keyframes buffer
	0%
		width 0px
	60%
		width 800px
	70%
		width 800px
	100%
		width 800px
@-webkit-keyframes play
	0%
		width 0px
	100%
		width 800px