
html
	head
		meta(charset='utf-8')
		title gfm 类似文本标记
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
		script(src='../../web_editor/editor.js')
		script(src='liuxian_compile.js')
		:coffeescript
			$ ->
				($ '#box').append (tool ($ '#text').val())
				($ '#text').keypress (e) ->
					($ '#box').empty()
					($ '#box').append (tool ($ '#text').val())
		:stylus
			#main
				width 1000px
				height 600px
				display -moz-box
				display -webkit-box
				-webkit-box-orient horizontal
				-moz-box-orient horizontal
			#text
				width 500px
				height 600px
				line-height 26px
				font-size 13px
			#box
				width 500px
				height 600px
				font-size 13px
				line-height 26px
				padding 13px 26px
				background hsl(0,96%,86%)
			pre, #box>code, p>code
				margin 0px 3px
				padding 0px 3px
				-moz-tab-size 4
				background hsl(0,96%,96%)
				border 1px solid hsl(0,90%,70%)
			b
				margin 0px
			p
				margin 0px
				line-height 26px
	body
		#main
			textarea#text
			nav#box
